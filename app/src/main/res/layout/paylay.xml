<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="10dp"

    android:layout_height="440dp">

   <LinearLayout
       android:background="@drawable/a"

       android:orientation="vertical"
       android:layout_width="match_parent"
       android:layout_height="440dp">
       <ImageView
           android:layout_width="54dp"
           android:layout_height="54dp"
           android:src="@drawable/gp"
           android:layout_gravity="center_horizontal"
           />

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
android:layout_gravity="center_horizontal"
           android:textColor="@color/colorAccent"
           android:textSize="22sp"
           android:fontFamily="@font/alfa_slab_one"
           android:text="PayMent Gateway"
           />

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="From"
           android:textSize="19sp"
           android:textColor="@android:color/holo_blue_dark"
           android:fontFamily="@font/arbutus"
           />

       <com.rengwuxian.materialedittext.MaterialEditText
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
          android:textStyle="bold"
           android:textColor="@android:color/white"
           app:met_textColor="@android:color/white"
           app:met_baseColor="@android:color/white"
           android:enabled="false"
           android:text="UserName"
           android:id="@+id/username"
           android:textSize="15sp" />


       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="To"
           android:textSize="19sp"
           android:textColor="@android:color/holo_orange_dark"
           android:fontFamily="@font/arbutus"
           />

       <com.rengwuxian.materialedittext.MaterialEditText
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:textStyle="bold"
           android:textColor="@android:color/white"
           app:met_textColor="@android:color/white"
           app:met_baseColor="@android:color/white"
           android:enabled="false"
           android:text="UserName"
           android:id="@+id/endUser"
           android:textSize="15sp" />


       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Amount"
           android:textSize="19sp"
           android:textColor="@android:color/holo_red_dark"
           android:fontFamily="@font/arbutus"
           />

       <com.rengwuxian.materialedittext.MaterialEditText
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:textStyle="bold"
           android:textColor="@android:color/white"
           app:met_textColor="@android:color/white"
           app:met_baseColor="@android:color/white"
           android:enabled="false"
           android:hint="Rs"
           app:met_textColorHint="@android:color/white"
           android:id="@+id/amount"
           android:textSize="15sp" />





       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Payment Description"
           android:textSize="19sp"
           android:textColor="@android:color/holo_purple"
           android:fontFamily="@font/arbutus"
           />

       <com.rengwuxian.materialedittext.MaterialEditText
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:textStyle="bold"
           android:textColor="@android:color/white"
           app:met_textColor="@android:color/white"
           app:met_baseColor="@android:color/white"
           android:text="Description"
           android:id="@+id/dexc"
           android:textSize="15sp" />


<Button
    android:drawableLeft="@drawable/ic_baseline_attach_money_24"
    android:backgroundTint="@color/colorAccent"
    android:layout_gravity="center_horizontal"
    android:fontFamily="@font/alfa_slab_one"
    android:textColor="@android:color/white"
    android:text="Pay With GPAY"
    android:id="@+id/pay"
    android:layout_width="200dp"
    android:layout_height="70dp"

    />






   </LinearLayout>





</androidx.cardview.widget.CardView>